<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".add_regular_student.AddRegularStudentActivity">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:rotation="180"
        android:layout_marginStart="15dp"
        android:src="@drawable/baseline_arrow_forward_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black_app" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Add Regular Student"
        android:textColor="@color/black_app"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="15dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background_2"
                android:drawableStart="@drawable/outline_person_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/drawable_color"
                android:fontFamily="@font/poppins"
                android:hint="Name"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:paddingVertical="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black_app"
                android:textColorHint="@color/gray_text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phoneEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_background_2"
                android:drawableStart="@drawable/outline_phone_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:hint="Phone Number"
                android:inputType="number"
                android:maxLength="10"
                android:paddingVertical="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black_app"
                android:textColorHint="@color/gray_text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameEt" />

            <TextView
                android:id="@+id/requireTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Timing Required *"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneEt" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/timingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/requireTime"
                app:strokeColor="#E4DFDF"
                app:strokeWidth="2dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="20dp">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:text="Time Slot"
                            android:textColor="@color/drawable_color"
                            android:textSize="16sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:text="Morning"
                            android:textColor="@color/gray_text_color"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toTopOf="@+id/buttonMorning"
                            app:layout_constraintEnd_toEndOf="@+id/buttonMorning"
                            app:layout_constraintStart_toStartOf="@+id/buttonMorning" />

                        <TextView
                            android:id="@+id/buttonMorning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/background_button_color_change"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="6dp"
                            android:text="10:00 am to 10:00 pm"
                            android:textAllCaps="false"
                            android:textColor="@color/black_app"
                            app:layout_constraintEnd_toStartOf="@+id/buttonAfternoon"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Afternoon"
                            android:textColor="@color/gray_text_color"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/buttonAfternoon"
                            app:layout_constraintEnd_toEndOf="@+id/buttonAfternoon"
                            app:layout_constraintStart_toStartOf="@+id/buttonAfternoon" />

                        <TextView
                            android:id="@+id/buttonAfternoon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/background_button_color_change"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="22dp"
                            android:paddingVertical="6dp"
                            android:text="10:00 am to 10:00 pm"
                            android:textAllCaps="false"
                            android:textColor="@color/black_app"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/buttonMorning"
                            app:layout_constraintTop_toTopOf="@+id/buttonMorning" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Evening"
                            android:textStyle="bold"
                            android:textColor="@color/gray_text_color"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toTopOf="@+id/buttonEvening"
                            app:layout_constraintEnd_toEndOf="@+id/buttonEvening"
                            app:layout_constraintStart_toStartOf="@+id/buttonEvening" />

                        <TextView
                            android:id="@+id/buttonEvening"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/background_button_color_change"
                            android:fontFamily="@font/poppins"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="6dp"
                            android:text="10:00 am to 10:00 pm"
                            android:textAllCaps="false"
                            android:textColor="@color/black_app"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="@+id/buttonMorning"
                            app:layout_constraintTop_toBottomOf="@+id/buttonMorning" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Subscription End Date "
                android:textStyle="bold"
                android:textColor="@color/gray_text_color"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/chooseDate"
                app:layout_constraintStart_toStartOf="@+id/chooseDate"
                app:layout_constraintTop_toBottomOf="@+id/timingLayout" />

            <TextView
                android:id="@+id/requireDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Date Required *"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/chooseDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timingLayout" />


            <TextView
                android:id="@+id/chooseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background_2"
                android:drawableStart="@drawable/outline_calendar_month_24"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/drawable_color"
                android:fontFamily="@font/poppins"
                android:hint="Choose Date"
                android:inputType="number"
                android:maxLength="6"
                android:paddingVertical="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black_app"
                android:textColorHint="@color/gray_text_color"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Amount Paid"
                android:textStyle="bold"
                android:textColor="@color/gray_text_color"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chooseDate" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/amountPaidEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background_2"
                android:drawableStart="@drawable/baseline_currency_rupee_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/drawable_color"
                android:fontFamily="@font/poppins"
                android:hint="Amount Paid"
                android:inputType="number"
                android:paddingVertical="15dp"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black_app"
                android:textColorHint="@color/gray_text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <FrameLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/signinbackground"
        android:elevation="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/addStudentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:outlineAmbientShadowColor="@color/blue1"
            android:outlineSpotShadowColor="@color/blue1"
            app:cardBackgroundColor="@color/blue1"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneEt"
            app:strokeColor="@color/blue1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="ADD STUDENT"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="#384AED"
                    app:cardCornerRadius="20dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/baseline_arrow_forward_24" />
                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>