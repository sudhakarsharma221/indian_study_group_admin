<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingVertical="15dp"
    tools:context=".bottom_nav_bar.profile.ProfileFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/mainView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/editProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="#384AED"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/baseline_edit_24" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Profile"
                    android:textColor="@color/blue1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfile"
                    app:civ_border_color="@color/blue1"
                    app:civ_border_width="0.1dp"
                    app:layout_constraintEnd_toEndOf="@+id/textView"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:elevation="10dp"
                    android:outlineAmbientShadowColor="@color/blue1"
                    android:outlineSpotShadowColor="@color/blue1"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/nameEt"
                    app:drawableStartCompat="@drawable/outline_person_24"
                    app:drawableTint="@color/drawable_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edit_text_background_2"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins"
                    android:hint="Enter your name"
                    android:paddingVertical="15dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/blue1"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/usernameEt"
                    app:drawableStartCompat="@drawable/outline_person_24"
                    app:drawableTint="@color/drawable_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nameEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_background_2"
                    android:drawablePadding="10dp"
                    android:editable="false"
                    android:fontFamily="@font/poppins"
                    android:hint="Enter username"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:paddingVertical="15dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/blue1"
                    android:textColorHint="#A09F9F"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/pincodeEt"
                    app:drawableStartCompat="@drawable/baseline_location_on_24"
                    app:drawableTint="@color/drawable_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/usernameEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_background_2"
                    android:drawablePadding="10dp"
                    android:editable="false"
                    android:enabled="false"
                    android:fontFamily="@font/poppins"
                    android:hint="Enter your area pincode"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingVertical="15dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/blue1"
                    android:textColorHint="#A09F9F"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tvCity"
                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pincodeEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_background_2"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:paddingVertical="15dp"
                    android:text="City"
                    android:textColor="@color/blue1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvState"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline"
                    app:layout_constraintTop_toTopOf="@+id/tvCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/edit_text_background_2"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:paddingVertical="15dp"
                    android:text="State"
                    android:textColor="@color/blue1"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/aboutET"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_background_2"
                    android:fontFamily="@font/poppins"
                    android:hint="Bio"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="2"
                    android:padding="10dp"
                    android:textColor="@color/blue1"
                    android:textSize="16sp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    app:layout_constraintGuide_percent="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <FrameLayout
        android:id="@+id/progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="20dp"
        android:visibility="gone">


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>